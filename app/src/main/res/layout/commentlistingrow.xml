<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorwhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/newsfeedrowbg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/textcommentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:baselineAligned="false"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:id="@+id/myCardView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="@dimen/album_dp_0">
                <ImageView
                    android:id="@+id/profileIV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="TODO"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic_placeholder" />
                </androidx.cardview.widget.CardView>

                <ProgressBar
                    android:id="@+id/progressView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:visibility="visible" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/moreIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_more" />

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/moreIv"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textSize="@dimen/textsizesmall" />

                <TextView
                    android:id="@+id/commentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameTv"
                    android:layout_marginTop="2dp"
                    android:autoLink="web"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorLink="@android:color/holo_blue_dark"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/testdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameTv"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commentTv"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />

            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/gifIV"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/nameTv"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:contentDescription="TODO" />

        <ProgressBar
            android:id="@+id/progressViewgif"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/nameTv"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_light"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>