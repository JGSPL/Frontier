    </LinearLayout>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/trans"
        android:fitsSystemWindows="false">

        <!--app:itemIconTint="@color/colorwhite"-->
        <!--app:itemTextColor="@color/colorwhite"-->

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/my"
                    layout="@layout/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my"
                    android:background="@color/colorwhite"
                    android:drawableLeft="@drawable/home"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textcolorLight"
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="Home"
                    android:visibility="gone"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/album_dp_10"
                    android:layout_marginRight="@dimen/album_dp_10"
                    android:background="@color/textcolorLight" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/editProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home"
                    android:background="@color/background"
                    android:drawableLeft="@drawable/s_editprofile"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textcolorLight"
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="Edit Profile"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="@dimen/album_dp_10"
                    android:layout_marginRight="@dimen/album_dp_10"
                    android:background="@color/textcolorLight" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/buddyList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editProfile"
                    android:background="@color/colorwhite"
                    android:drawableLeft="@drawable/s_buddy"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textcolorLight"
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="Buddy List"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="@dimen/album_dp_10"
                    android:layout_marginRight="@dimen/album_dp_10"
                    android:background="@color/textcolorLight" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/eula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buddyList"
                    android:background="@color/background"
                    android:drawableLeft="@drawable/s_eula"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textcolorLight"
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="@string/eula"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="@dimen/album_dp_10"
                    android:layout_marginRight="@dimen/album_dp_10"
                    android:background="@color/textcolorLight" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eula"
                    android:background="@color/colorwhite"
                    android:drawableLeft="@drawable/s_privacy"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textcolorLight"
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="@dimen/album_dp_10"
                    android:layout_marginRight="@dimen/album_dp_10"
                    android:background="@color/textcolorLight" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/contactus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/privacy_policy"
                    android:background="@color/background"
                    android:drawableLeft="@drawable/s_contacthelp"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textcolorLight"
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="@string/contactus"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="@dimen/album_dp_10"
                    android:layout_marginRight="@dimen/album_dp_10"
                    android:background="@color/textcolorLight" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/switchbt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactus"
                    android:background="@color/colorwhite"
                    android:drawableLeft="@drawable/s_switch"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textcolorLight"
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="@string/swit"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="@dimen/album_dp_10"
                    android:layout_marginRight="@dimen/album_dp_10"
                    android:background="@color/textcolorLight" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/eventInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buddyList"
                    android:drawableLeft="@drawable/ic_info"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:paddingLeft="23dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="Event Info"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventInfo"
                    android:drawableLeft="@drawable/notification_icon"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:paddingLeft="23dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="Notifications"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/exh_analytics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notification"
                    android:drawableLeft="@drawable/exhibitor_analytics"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="8dp"
                    android:gravity="left|center"
                    android:paddingLeft="23dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="Exhibitor Analytics"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menurecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exh_analytics"
                    android:scrollbars="none"
                    android:visibility="gone" />


                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@+id/chatbt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/switchbt"
                    android:drawableLeft="@drawable/ic_question"
                    android:drawableRight="@drawable/ic_rightarrow"
                    android:drawablePadding="10dp"
                    android:gravity="left"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:text="@string/expert"
                    android:textColor="@color/textcolorLight"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone" />


