<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    tools:context="com.procialize.mrgeApp20.InnerDrawerActivity.QAAttendeeActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:weightSum="10"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:layout_gravity="right"
            android:padding="10dp">
        </ImageView>

        <com.procialize.mrgeApp20.Fonts.RobotoTextview
        android:id="@+id/nmtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
            android:layout_weight="9"
        android:padding="4sp"
        android:text="@string/qadirect"
        android:textColor="@color/activetab"
        android:textSize="20dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:id="@+id/imgClose"
            android:padding="10dp">
        </ImageView>
    </LinearLayout>

    <com.procialize.mrgeApp20.Fonts.RobotoButton
        android:id="@+id/postbtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/postquestion"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:textSize="@dimen/textsizesmall" />

    <com.procialize.mrgeApp20.Fonts.RobotoTextview
        android:id="@+id/pullrefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:gravity="center"
        android:text="Pull Down to Refresh"
        android:textColor="@color/inactivetab"
        android:textSize="10sp"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/loader"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/linUpper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/qaRvrefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/qaRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

            </androidx.recyclerview.widget.RecyclerView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.procialize.mrgeApp20.Fonts.RobotoTextview
            android:id="@+id/txtEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="No Question Posted yet"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>
