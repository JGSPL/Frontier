<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_marginBottom="60dp"
    android:background="@color/colorwhite"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linTop"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content">

        <com.procialize.mrgeApp20.Fonts.RobotoTextview
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="Live Quiz"
            android:textColor="@color/black"
            android:layout_marginRight="70dp"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginLeft="20dp">
        </com.procialize.mrgeApp20.Fonts.RobotoTextview>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="right"
            android:id="@+id/imgClose"
            android:padding="10dp">
        </ImageView>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/linTop"

        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />


<!--
                <com.procialize.mrgeApp20.CustomTools.NoScrollRecycler
                    android:id="@+id/quiz_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="5dp"
                    android:isScrollContainer="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/quiz_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="5dp"
                    android:isScrollContainer="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <com.procialize.mrgeApp20.Fonts.RobotoTextview
                    android:id="@android:id/empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|center_horizontal"
                    android:text="No active quiz"
                    android:textColor="@color/colorwhite"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.procialize.mrgeApp20.Fonts.RobotoButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:maxHeight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:visibility="gone" />


    <com.procialize.mrgeApp20.Fonts.RobotoButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:visibility="gone" />

</RelativeLayout>